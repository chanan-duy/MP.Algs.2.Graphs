<Window x:Class="Wpf.Hanoi.Tower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tower" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Number of Disks:" />
            <TextBox x:Name="NumDisksTextBox" Width="50" Text="3" VerticalContentAlignment="Center" />
            <Button x:Name="StartButton" Content="Start" Margin="10,0,0,0" Click="StartButton_Click" />
            <TextBlock x:Name="MovesTextBlock" Margin="20,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Canvas x:Name="HanoiCanvas" Grid.Row="1" Background="AliceBlue" />
    </Grid>
</Window>
